<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidTemplate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/text_input</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Disable. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:windowIsTranslucent">true</item>


        // theme
        <item name="android:ambientShadowAlpha">0.01</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:spotShadowAlpha">0.15</item>

    </style>

    <style name="CustomActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_left_radius</item>
        <item name="android:paddingVertical">@dimen/ten</item>
        <item name="android:paddingHorizontal">@dimen/twenty_dp</item>
    </style>
    <style name="CancelDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomRatingBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">#FFFFFF</item> <!-- Gold -->
        <item name="colorControlNormal">#FFFFFF</item> <!-- Unfilled star -->
    </style>


</resources>