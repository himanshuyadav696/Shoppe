<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.dashboard.add_venue.AddVenueFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sixteen_dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTittle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add New Venue"
                android:fontFamily="@font/roboto_semibold"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="@id/ivBack" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAddImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/eight_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:id="@+id/llAddImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/eight_dp"
                        android:paddingVertical="40dp"
                        android:elevation="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/grey_outline"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivAddImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_photo" />

                        <TextView
                            android:id="@+id/tvUploadImages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload venue images"
                            android:gravity="center"
                            android:textSize="@dimen/fourteen_sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginTop="@dimen/ten" />

                        <TextView
                            android:id="@+id/tvUploadDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="At least 5 images recommended"
                            android:gravity="center"
                            android:textSize="@dimen/twelve_sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginTop="@dimen/five" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:fadeScrollbars="true"
                        android:visibility="gone"
                        android:layout_marginHorizontal="@dimen/eight_dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/rcv_add_images"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvVenueName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/venue_name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clAddImages"/>

                <EditText
                    android:id="@+id/etVenueName"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/venue_name"
                    android:singleLine="true"
                    android:textSize="@dimen/fourteen_sp"
                    android:maxLength="50"
                    android:elevation="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/grey_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/five_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvVenueName"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etVenueName"/>

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/describe_your_venue"
                    android:singleLine="true"
                    android:textSize="@dimen/fourteen_sp"
                    android:maxLength="150"
                    android:paddingHorizontal="10dp"
                    android:elevation="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/grey_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/five_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"/>

                <TextView
                    android:id="@+id/tvSetLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_location"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etDescription"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/clMapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:strokeColor="#D8D6D6"
                    app:strokeWidth="1dp"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="8dp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/five_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvSetLocation">
                    <FrameLayout
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/transparentOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />
                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full address of venue"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clMapView"/>

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/describe_your_venue"
                    android:singleLine="true"
                    android:textSize="@dimen/fourteen_sp"
                    android:elevation="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/grey_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/five_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvAddress"/>


                <TextView
                    android:id="@+id/tvState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/state"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etAddress"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:elevation="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvState"
                    android:background="@drawable/grey_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinState"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:entries="@array/City"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintEnd_toStartOf="@id/ivStateArrow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ImageView
                        android:id="@+id/ivStateArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/arrow_down"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_city"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clState"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:elevation="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvCity"
                    android:background="@drawable/grey_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinCity"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:entries="@array/City"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintEnd_toStartOf="@id/ivCityArrow"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ImageView
                        android:id="@+id/ivCityArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/arrow_down"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvPinCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pin Code"
                    android:maxLength="10"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clCity"/>

                <EditText
                    android:id="@+id/etPinCode"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Pin code"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textSize="@dimen/fourteen_sp"
                    android:elevation="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/grey_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/five_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvPinCode"/>

                <TextView
                    android:id="@+id/tvAmmenties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amenities"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etPinCode"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAmenit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:elevation="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvAmmenties"
                    android:background="@drawable/grey_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:id="@+id/tvAddAmmenties"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:text="@string/add_amenities"
                        android:layout_marginEnd="5dp"
                        android:paddingHorizontal="@dimen/ten"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toStartOf="@id/ivAmmenties"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <ImageView
                        android:id="@+id/ivAmmenties"
                        android:layout_width="@dimen/twenty_dp"
                        android:layout_height="@dimen/twenty_dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/add"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvAmmenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/clAmenit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/save"
                    app:cornerRadius="@dimen/five_dp"
                    android:textSize="@dimen/sixteen_sp"
                    app:iconSize="@dimen/fifteen"
                    app:iconTint="@color/white"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:backgroundTint="@color/app_color_second"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/fifteen"
                    app:layout_constraintTop_toBottomOf="@id/rcvAmmenities"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </LinearLayout>
</layout>