<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/twenty_four_dp">

        <!-- Slot title and cancel action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSlotTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot 3"
                android:textStyle="bold"
                android:textSize="@dimen/fourteen_sp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvCancelSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL SLOT"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/green"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/twelve_sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="@dimen/twenty_dp"/>

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/ten"
                android:paddingHorizontal="@dimen/twelve_sp"
                android:text="04:00 AM"
                android:backgroundTint="@color/grey"
                android:background="@drawable/grey_outline_without_border"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:paddingHorizontal="6dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/ten"
                android:paddingHorizontal="@dimen/twelve_sp"                android:text="07:30 PM"
                android:backgroundTint="@color/grey"
                android:background="@drawable/grey_outline_without_border"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- Rent Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent:"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/twelve_sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="@dimen/twenty_dp"/>

            <TextView
                android:id="@+id/tvRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 4000 "
                android:paddingVertical="@dimen/ten"
                android:paddingHorizontal="@dimen/twenty_four_dp"
                android:backgroundTint="@color/grey"
                android:background="@drawable/grey_outline_without_border"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/tvBookNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:gravity="end"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/red"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</layout>