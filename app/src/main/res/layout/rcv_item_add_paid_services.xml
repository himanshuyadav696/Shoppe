<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!-- Bind variables here if needed -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="@dimen/ten"
        android:gravity="center_vertical"
        android:background="@drawable/grey_outline_without_border">

        <!-- Title + Description Vertical Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ammenties"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_semibold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I will provide you with 2 umpires."
                android:textSize="11sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Price -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹999"
            android:textSize="@dimen/sixteen_sp"
            android:gravity="end"
            android:textColor="@color/black"
            android:layout_marginEnd="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPlusPink"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/fifteen"
                android:src="@drawable/plus_pink"
                android:contentDescription="Edit" />

            <!-- Edit Icon -->
            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/fifteen"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit" />

            <!-- Delete Icon -->
            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete" />
        </LinearLayout>


    </LinearLayout>
</layout>
