<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp"
        tools:context=".ui.dashboard.add_venue.VenueDetailFragment">

      <!--  <View
            android:id="@+id/statusbarHeight"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sixteen_dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTittle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/view_venue_details"
                android:fontFamily="@font/roboto_semibold"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="@id/ivBack" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/ten"
                    app:cardElevation="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/bannerViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="160dp" />
                </com.google.android.material.card.MaterialCardView>
                <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewPager"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="24dp"
                    app:dotsSpacing="4dp"
                    app:dotsStrokeWidth="1dp"
                    app:dotsStrokeColor="@color/grey"
                    app:selectedDotColor="#15A41F"
                    app:dotsWidthFactor="2.5"
                    app:progressMode="true"/>

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ryders Sports Academy"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/roboto_semibold"
                    android:layout_marginTop="@dimen/fifteen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dots_indicator"/>

                <TextView
                    android:id="@+id/tvHeadDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:textSize="@dimen/fourteen_sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:text="Ryders Sports Academy is your all-in-one hub for professional sports training in Football, Cricket, and Tennis. Designed for athletes of all ages and skill levels, we combine top-notch facilities with expert coaching to help you unlock your full potential."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHeading"/>




                <LinearLayout
                    android:id="@+id/llGrounds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHeadDesc">
                    <TextView
                        android:id="@+id/tvGround"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grounds/courts available to play"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/sixteen_dp"
                        android:textSize="@dimen/sixteen_sp"
                        android:fontFamily="@font/roboto_semibold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvHeadDesc"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvGrounds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/rcv_court_list"
                        android:layout_marginHorizontal="@dimen/sixteen_dp"
                        tools:itemCount="4"
                        />

                    <TextView
                        android:id="@+id/tvNoResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Courts not available"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/sixteen_dp"
                        android:textSize="@dimen/sixteen_sp"
                        android:padding="20dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_semibold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvHeadDesc"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintTop_toBottomOf="@id/llGrounds">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:ignore="MissingConstraints">

                            <LinearLayout
                                android:id="@+id/llAddressInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="@dimen/five_dp"
                                android:layout_weight="1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/clMapView"
                                app:layout_constraintWidth_percent="0.55">

                                <TextView
                                    android:id="@+id/tvAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/address"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_semibold"
                                    android:textSize="@dimen/sixteen_sp"/>

                                <TextView
                                    android:id="@+id/tvAddressValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/fourteen_sp"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:text="@string/near_scottish_high_international_school_block_g_sushant_lok_2_sector_57_gurugram_haryana_122003"/>

                            </LinearLayout>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/clMapView"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="100dp"
                                android:clickable="false"
                                app:layout_constraintTop_toTopOf="@id/llAddressInfo"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/llAddressInfo"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/grey">

                                <FrameLayout
                                    android:id="@+id/mapDetail"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llCityState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gurugram"
                                android:textSize="@dimen/twelve_sp"
                                android:drawablePadding="@dimen/three"
                                app:drawableStartCompat="@drawable/location_green"
                                app:drawableTint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tvState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Haryana"
                                android:layout_marginStart="@dimen/five_dp"
                                android:textSize="@dimen/twelve_sp"
                                android:drawablePadding="@dimen/three"
                                app:drawableStartCompat="@drawable/green_dot"
                                app:drawableTint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tvPinCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="122003"
                                android:layout_marginStart="@dimen/five_dp"
                                android:textSize="@dimen/twelve_sp"
                                android:drawablePadding="@dimen/three"
                                app:drawableStartCompat="@drawable/green_dot"
                                app:drawableTint="@color/colorPrimary" />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvAmmenties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amenities"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_semibold"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clAddress"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvAmmenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAmmenties"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddGround"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Add Ground/Court"
                    app:cornerRadius="@dimen/five_dp"
                    android:textSize="@dimen/sixteen_sp"
                    app:iconSize="@dimen/fifteen"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:iconTint="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:backgroundTint="@color/app_color_second"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/fifteen"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcvAmmenities"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>
</layout>