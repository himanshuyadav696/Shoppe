<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.dashboard.add_venue.AddVenueFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sixteen_dp"
                android:src="@drawable/ic_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTittle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Check Slots"
                android:fontFamily="@font/roboto_semibold"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="@id/ivBack" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten">

                <TextView
                    android:id="@+id/tvGroundName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ground Name"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clGroundName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:elevation="@dimen/ten"
                    android:background="@drawable/grey_outline"
                    android:paddingVertical="15dp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvGroundName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/tvGroundNameValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ground Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        android:layout_marginStart="@dimen/ten"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvSelectDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_date"
                    android:layout_marginTop="@dimen/ten"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintTop_toBottomOf="@id/clGroundName"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSelectDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:elevation="@dimen/ten"
                    android:background="@drawable/grey_outline"
                    android:paddingVertical="15dp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvSelectDate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/startDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        android:layout_marginStart="@dimen/ten"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/startCalendarIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="@dimen/five_dp"
                        android:layout_marginStart="@dimen/ten"
                        android:src="@drawable/calendar_month"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/llRememberMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clSelectDate">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/checkboxFreeSlot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/free_uncheck_green_box"
                            />

                        <TextView
                            android:id="@+id/textFree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/free"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/checkboxBooked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/booked_uncheck_red_box"
                            />

                        <TextView
                            android:id="@+id/textBooked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/booked"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/checkboxOnHold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/on_hold_uncheck_org_box"
                            />

                        <TextView
                            android:id="@+id/textOnHold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hold"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular" />

                    </LinearLayout>


                </LinearLayout>



                <TextView
                    android:id="@+id/tvTimeSlot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Time Slot"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@id/ivEdit"
                    android:layout_marginTop="@dimen/fifteen"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintTop_toBottomOf="@id/llRememberMe" />

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="@dimen/twenty_four_dp"
                    android:layout_height="@dimen/twenty_four_dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tvTimeSlot"
                    app:layout_constraintTop_toTopOf="@id/tvTimeSlot" />

                <LinearLayout
                    android:id="@+id/llRcvSlots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginHorizontal="@dimen/five_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTimeSlot">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvSlots"
                        tools:listitem="@layout/rcv_slots"
                        android:layout_width="match_parent"
                        tools:itemCount="5"
                        android:visibility="visible"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvNoSlots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Slots available"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:textSize="@dimen/sixteen_sp"
                        android:fontFamily="@font/roboto_semibold"
                        android:padding="@dimen/fourty_dp"
                        android:layout_gravity="center" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</layout>
