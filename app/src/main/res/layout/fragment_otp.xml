<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_back_btn"
            android:layout_margin="@dimen/sixteen_dp"
            android:padding="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:fillViewport="true"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sixteen_dp">

                <TextView
                    android:id="@+id/tvVerification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/verification"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/thirty"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/twenty_four_sp"
                    android:fontFamily="@font/roboto_semibold"/>

                <TextView
                    android:id="@+id/tvVerificationCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verification code"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvVerification"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/eighteen_sp"
                    android:fontFamily="@font/roboto_semibold"/>


                <TextView
                    android:id="@+id/tvVerificationDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We will send you the code verification to you mobile"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/twenty_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvVerificationCode"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/fourteen_sp"
                    android:fontFamily="@font/roboto_regular"/>

                <com.example.template.utils.pinview.Pinview
                    android:id="@+id/pinview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:pinLength="4"
                    app:password="false"
                    app:inputType="number"
                    android:elevation="@dimen/ten"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginTop="@dimen/fifteen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvVerificationDesc"
                    app:pinBackground="@drawable/grey_bg_box_red_stroke" />

                <LinearLayout
                    android:id="@+id/llResend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/ten"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pinview">

                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="00:00"
                        android:layout_weight="1"
                        app:layout_constraintTop_toBottomOf="@id/tvVerificationCode"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="@dimen/fourteen_sp"
                        android:fontFamily="@font/roboto_regular"/>

                    <TextView
                        android:id="@+id/tvResend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:linksClickable="true"
                        android:text="@string/resend_otp"
                        android:layout_weight="1"
                        android:gravity="end"
                        app:layout_constraintTop_toBottomOf="@id/tvVerificationCode"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="@dimen/fourteen_sp"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llResend">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVerify"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/verify"
                        app:cornerRadius="@dimen/five_dp"
                        android:textSize="@dimen/sixteen_sp"
                        android:fontFamily="@font/roboto_regular"
                        android:backgroundTint="@color/app_color_second"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/fifteen"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </ScrollView>
    </LinearLayout>


</layout>