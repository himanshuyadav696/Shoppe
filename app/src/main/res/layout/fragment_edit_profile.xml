<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.settings.EditProfileFragment">

        <!-- Fixed Toolbar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvTittle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:fontFamily="@font/roboto_semibold"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="@id/ivBack" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_below="@id/clToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Profile Image Centered -->
                <FrameLayout
                    android:id="@+id/frImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/place_holder"
                        app:shapeAppearanceOverlay="@style/CircularImageView"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/camera_icon"
                        android:layout_width="@dimen/fourty_dp"
                        android:layout_height="@dimen/fourty_dp"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/ic_camera_green"
                        android:padding="3dp" />
                </FrameLayout>


                <!-- Form Fields -->

                <LinearLayout
                    android:id="@+id/llr"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@+id/frImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/label_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name *"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintTop_toBottomOf="@id/frImage"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Enter your first name"
                        android:padding="10dp"
                        android:textSize="@dimen/sixteen_sp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/grey_outline"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/label_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Name *"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/fifteen"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintTop_toBottomOf="@id/frImage"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <EditText
                        android:id="@+id/et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Enter your last name"
                        android:padding="10dp"
                        android:textSize="@dimen/sixteen_sp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/grey_outline"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/label_name" />

                    <!-- Email Label -->
                    <TextView
                        android:id="@+id/label_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email *"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="@dimen/fifteen"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_name"
                        app:layout_constraintBottom_toTopOf="@id/et_email" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Enter your email address"
                        android:padding="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/sixteen_sp"
                        android:background="@drawable/grey_outline"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/five_dp"
                        app:layout_constraintTop_toBottomOf="@id/label_email"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/label_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number *"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="@dimen/fifteen"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_email"
                        app:layout_constraintBottom_toTopOf="@id/et_phone_number" />

                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Enter you number"
                        android:padding="10dp"
                        android:textSize="@dimen/sixteen_sp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/grey_outline"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/five_dp"
                        app:layout_constraintTop_toBottomOf="@id/label_phone_number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="@dimen/fifteen"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_email"
                        app:layout_constraintBottom_toTopOf="@id/et_phone_number" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/grey_outline"
                        android:orientation="horizontal"
                        tools:ignore="DuplicateIds">

                        <Spinner
                            android:id="@+id/mySpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown"
                            tools:ignore="TouchTargetSizeCheck">

                        </Spinner>


                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOB"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/fifteen"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintTop_toBottomOf="@id/frImage"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clSelectDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grey_outline"
                        android:paddingVertical="15dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/llr"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:id="@+id/et_dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0000-00-00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fourteen_sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginStart="@dimen/ten"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/startCalendarIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="@dimen/five_dp"
                            android:layout_marginStart="@dimen/ten"
                            android:src="@drawable/calendar_month"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/fifteen"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintTop_toBottomOf="@id/frImage"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <EditText
                        android:id="@+id/et_City"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Noida"
                        android:padding="10dp"
                        android:textSize="@dimen/sixteen_sp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/grey_outline"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/label_name" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nationality"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/fifteen"
                        android:fontFamily="@font/roboto_regular"
                        app:layout_constraintTop_toBottomOf="@id/frImage"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <EditText
                        android:id="@+id/et_nation"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="India"
                        android:padding="10dp"
                        android:textSize="@dimen/sixteen_sp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@drawable/grey_outline"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/label_name" />

                </LinearLayout>
                <!-- Name Label -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/twenty_dp"
                    app:layout_constraintBottom_toTopOf="@id/btnSave"
                    app:layout_constraintTop_toBottomOf="@id/llr"/>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:text="Save"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"
                    android:backgroundTint="@color/app_color_second"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    app:cornerRadius="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.0" /> <!-- Added bias to push button down if content is short -->

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </RelativeLayout>
</layout>