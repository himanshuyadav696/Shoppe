<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.home.HomeFragment">

     <!--   <View
            android:id="@+id/statusbarHeight"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/sixteen_dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Circular Image -->
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profilefloter"
                android:contentDescription="Profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/circular"
                android:clipToOutline="true" />

            <!-- Vertical Text: Hello + Name -->
            <LinearLayout
                android:id="@+id/llTextContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/ivProfile"
                app:layout_constraintBottom_toBottomOf="@id/ivProfile"
                app:layout_constraintStart_toEndOf="@id/ivProfile"
                app:layout_constraintEnd_toStartOf="@id/ivNotification"
                >

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sector 45, Gurugram"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Notifications"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:tint="@color/grey" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/search_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivNotification"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/menu_right"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/clHeaderLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/fifteen"
                    app:layout_constraintTop_toTopOf="parent"
       >
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/bannerViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="160dp" />
                </com.google.android.material.card.MaterialCardView>
                <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewPager"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="24dp"
                    app:dotsSpacing="4dp"
                    app:dotsStrokeWidth="1dp"
                    app:dotsStrokeColor="@color/grey"
                    app:selectedDotColor="#15A41F"
                    app:dotsWidthFactor="2.5"
                    app:progressMode="true"/>

                <TextView
                    android:id="@+id/sportText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/roboto_semibold"
                    android:textColor="@color/black"
                    android:paddingHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/fifteen"
                    app:layout_constraintTop_toBottomOf="@id/dots_indicator"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvSports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/sport_item_container"
                    android:layout_marginTop="@dimen/fifteen"
                    android:paddingHorizontal="@dimen/sixteen_dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sportText"/>

                <TextView
                    android:id="@+id/tvUpComingBookings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Sports Clubs"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/roboto_semibold"
                    android:textColor="@color/black"
                    android:paddingHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/fifteen"
                    app:layout_constraintTop_toBottomOf="@id/rcvSports"/>

                <TextView
                    android:id="@+id/tvViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:visibility="gone"
                    android:paddingHorizontal="@dimen/sixteen_dp"
                    android:textSize="@dimen/fourteen_sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/blue"
                    app:layout_constraintBottom_toBottomOf="@id/tvUpComingBookings"
                    app:layout_constraintTop_toTopOf="@id/tvUpComingBookings"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/fifteen"
                    android:paddingBottom="@dimen/sixty_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvViewAll">

                    <TextView
                        android:id="@+id/tvNoDataFound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/you_have_upcoming_bookings"
                        android:gravity="center"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_semibold"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/eighteen_sp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvClubList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:paddingBottom="@dimen/_10sdp"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginBottom="@dimen/_10sdp"
                        tools:listitem="@layout/rcv_venue_list">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>