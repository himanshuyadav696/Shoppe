<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/twenty_dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUserImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/white"
                android:elevation="5dp"
                app:cardCornerRadius="100dp"
                app:strokeWidth="@dimen/four_dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:layout_width="@dimen/fifty_dp"
                    android:layout_height="@dimen/fifty_dp"
                    android:src="@drawable/place_holder"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMyActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_activity"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/fifteen"
                android:fontFamily="@font/raleway_regular"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/thirty"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardUserImage"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical|end"
                android:layout_marginStart="@dimen/ten"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnMyActivity">

                <ImageView
                    android:id="@+id/ivVouchers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fifteen"
                    android:src="@drawable/vouchers"/>

                <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fifteen"
                    android:src="@drawable/filter"/>
                <ImageView
                    android:id="@+id/ivSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_setting"/>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clHeaderLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/sixty_dp"
                android:layout_marginHorizontal="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/ten">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_bold"
                    android:singleLine="true"
                    android:text="@string/hello_romina"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty_four_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/llAnnouncement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:background="@drawable/grey_outline"
                    android:orientation="vertical"
                    android:padding="@dimen/ten"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName">

                    <TextView
                        android:id="@+id/tvAnnounceMent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/raleway_bold"
                        android:text="@string/announcement"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/tvAnnounceDesc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/raleway_regular"
                        android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_maecenas_hendrerit_luctus_libero_ac_vulputate"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve_sp"
                        app:drawableEndCompat="@drawable/button_circle" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvRecentlyViewed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Recently Viewed"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintTop_toBottomOf="@id/llAnnouncement" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvRecentlyViewed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvRecentlyViewed"
                    tools:listitem="@layout/rcv_recently_viewed" />

                <TextView
                    android:id="@+id/tvStories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Recently Viewed"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintTop_toBottomOf="@id/rcvRecentlyViewed" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvStories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvStories"
                    tools:listitem="@layout/rcv_stories" />

                <TextView
                    android:id="@+id/tvMostPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Most Popular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcvNewItems" />

                <TextView
                    android:id="@+id/tvMostPopularSeelAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:drawableEnd="@drawable/button_circle"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center_vertical"
                    android:text="See All"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcvNewItems" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvMostPopular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMostPopularSeelAll"
                    tools:listitem="@layout/rcv_new_tems" />


                <TextView
                    android:id="@+id/tvNewItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:fontFamily="@font/raleway_bold"
                    android:text="New Item"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcvStories" />

                <TextView
                    android:id="@+id/tvNewItemSeelAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:drawableEnd="@drawable/button_circle"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center_vertical"
                    android:text="See All"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcvStories" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvNewItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNewItemSeelAll"
                    tools:listitem="@layout/rcv_new_tems" />



                <TextView
                    android:id="@+id/tvFlashSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:fontFamily="@font/raleway_bold"
                    android:text="Flash Sale"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcvMostPopular" />

                <TextView
                    android:id="@+id/tvFlashTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen"
                    android:drawableStart="@drawable/time_fill_green"
                    android:drawablePadding="@dimen/ten"
                    android:fontFamily="@font/raleway_bold"
                    android:gravity="center_vertical"
                    android:text="00:00:00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen_sp"
                    app:drawableTint="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcvMostPopular" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvFlashSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFlashTimer"
                    tools:listitem="@layout/rcv_flash_sale" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>