<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardUserProfile"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="360dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/walkthrought_one"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_semibold"
        android:layout_marginHorizontal="@dimen/ten"
        app:layout_constraintStart_toEndOf="@id/cardUserProfile"
        app:layout_constraintEnd_toStartOf="@id/ivPhone"
        app:layout_constraintBottom_toBottomOf="@id/cardUserProfile"
        app:layout_constraintTop_toTopOf="@id/cardUserProfile"/>
    <TextView
        android:id="@+id/tvPrices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginHorizontal="@dimen/ten"
        />


</LinearLayout>