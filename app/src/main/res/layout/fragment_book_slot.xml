<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.add_venue.AddVenueFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/sixteen_dp"
                android:src="@drawable/ic_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTittle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/add_paid_services"
                android:fontFamily="@font/roboto_semibold"
                android:textSize="@dimen/sixteen_sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="@id/ivBack" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSlotDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Slot Detail"
                    android:visibility="gone"
                    android:textSize="@dimen/fourteen_sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:id="@+id/llSlotDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/fourteen_sp"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:elevation="@dimen/ten"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvSlotDetail"
                    android:background="@drawable/green_grey_outline"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <!-- Time Range -->
                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="07:00 AM – 11:00 AM"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp" />

                    <!-- Price -->
                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹400"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAvailablePaidservice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available Paid Services"
                    android:textSize="@dimen/fourteen_sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llSlotDetail"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvPaidServices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    android:paddingHorizontal="@dimen/sixteen_dp"
                    tools:listitem="@layout/rcv_item_add_paid_services"
                    app:layout_constraintTop_toBottomOf="@id/tvAvailablePaidservice">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/llAddedPaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/grey_outline"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/fifteen"
                    app:layout_constraintTop_toBottomOf="@id/rcvPaidServices">

                    <TextView
                        android:text="Added"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/ten"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvAddedPaidServices"
                        tools:listitem="@layout/rcv_added_paid_services"
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/ten"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/ten">
                        <TextView
                            android:id="@+id/tvTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Total Add Ons"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:id="@+id/tvTotalValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="₹0"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Description"
                    android:visibility="gone"
                    android:textSize="@dimen/fourteen_sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:layout_constraintTop_toBottomOf="@id/llAddedPaid"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>


                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="Type here..."
                    android:singleLine="true"
                    android:textSize="@dimen/fourteen_sp"
                    android:maxLength="50"
                    android:visibility="gone"
                    android:elevation="@dimen/ten"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/grey_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/five_dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnProceed"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/proceed"
                    app:cornerRadius="@dimen/five_dp"
                    android:textSize="@dimen/sixteen_sp"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"
                    app:iconSize="@dimen/fifteen"
                    app:iconTint="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:backgroundTint="@color/app_color_second"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/fifteen"
                    app:layout_constraintTop_toBottomOf="@id/etDescription"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </LinearLayout>
</layout>
