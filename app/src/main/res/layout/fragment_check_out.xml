<?xml version="1.0" encoding="utf-8"?>
<layout>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CheckOutFragment">

    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTittle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:fontFamily="@font/roboto_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivBack"
            app:layout_constraintBottom_toBottomOf="@id/ivBack" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/clToolbar"
        app:layout_constraintBottom_toTopOf="@id/btnPay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Insert your full vertical layout inside this -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp"> <!-- extra padding to not overlap with button -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ryders Sports Academy"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_semibold"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="@dimen/sixteen_dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSlotDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:elevation="@dimen/ten"
                    app:cardCornerRadius="12dp"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tvName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/fifteen">

                        <!-- Row 1: Date & Time Slot -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="12dp">

                            <!-- Date -->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date"
                                    android:fontFamily="@font/roboto_semibold"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="29 Apr 2021"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- Time Slot -->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time Slot"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/roboto_semibold"
                                    android:layout_gravity="center"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvStartTimeEnd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7:00Am To 10:00Am"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/darker_gray"
                            android:alpha="0.2"
                            android:layout_marginBottom="12dp" />

                        <!-- Row 2: Location & Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="12dp">

                            <!-- Location -->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Location"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/roboto_semibold"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvLocationName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gurugram"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- Field -->
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Field"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/roboto_semibold"
                                    android:textColor="@android:color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/courtName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Court 1"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/darker_gray"
                            android:alpha="0.2"
                            android:layout_marginBottom="12dp" />

                        <!-- Row 3: Price -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_semibold"
                                android:text="Price"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹4000"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardSlotDetail">

                    <!-- Customer Details Card -->

                    <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:elevation="@dimen/ten"
                        android:layout_marginHorizontal="@dimen/sixteen_dp"
                        app:cardCornerRadius="12dp"
                        android:padding="16dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCustomerDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Customer Details"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_semibold"
                                android:textSize="@dimen/sixteen_sp"
                                android:layout_marginTop="@dimen/fifteen"
                                app:layout_constraintTop_toBottomOf="@id/cardSlotDetail"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginHorizontal="@dimen/sixteen_dp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"
                                android:alpha="0.2"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/sixteen_dp"
                                android:orientation="vertical"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="John"
                                    android:id="@+id/tvUserName"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/fourteen_sp"
                                    android:layout_marginTop="8dp"
                                    android:textColor="@color/black" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/tvMail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="maysasha@gmail.com"
                                        android:fontFamily="@font/roboto_regular"
                                        android:textColor="@color/black" />
                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btnChange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Change"
                                        app:strokeWidth="1dp"
                                        android:textAllCaps="false"
                                        android:layout_marginStart="@dimen/twenty_dp"
                                        app:strokeColor="@color/grey"
                                        app:backgroundTint="@color/white"
                                        app:cornerRadius="@dimen/fifteen"/>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tvMobileNum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="+91 9874125898"
                                        android:fontFamily="@font/roboto_regular"
                                        android:textColor="@color/black"/>

                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <!-- Amount Breakup Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:elevation="@dimen/ten"
                        android:layout_marginHorizontal="@dimen/sixteen_dp"
                        app:cardCornerRadius="12dp"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/sixteen_dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount Breakup"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_semibold"
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"
                                android:alpha="0.2"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"/>

                            <!-- Items -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rcvPaidSevList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/item_checkout_page_paid_sev_list">

                            </androidx.recyclerview.widget.RecyclerView>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"
                                android:alpha="0.2"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"/>

                            <!-- Total -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:text="Total Add Ons"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_width="0dp"
                                    android:layout_marginEnd="@dimen/ten"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/tvTotalPrice"
                                    android:text="₹4200"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Terms & Condition -->
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/by_selecting_the_button_below_i_agree_to_the_stadium_rules_cancellation_policy_term_condition_i_also_agree_to_pay_the_total_amount_shown_which_includes_service_fees"
                        android:textSize="13sp"
                        android:autoLink="web"
                        android:layout_marginHorizontal="@dimen/sixteen_dp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <!-- Accept Checkbox -->
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/sixteen_dp"
                        android:layout_marginBottom="16dp">
                        <RadioButton
                            android:id="@+id/rbAgree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accept Term &amp; Condition"/>
                    </RadioGroup>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/proceed"
        app:cornerRadius="@dimen/five_dp"
        android:textSize="@dimen/sixteen_sp"
        android:layout_marginHorizontal="@dimen/sixteen_dp"
        app:iconSize="@dimen/fifteen"
        app:iconTint="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:backgroundTint="@color/app_color_second"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/fifteen"
        android:layout_marginBottom="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>

