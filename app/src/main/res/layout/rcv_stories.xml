<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ten">

        <!-- Main card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUserImage"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:elevation="6dp"
            android:layout_marginEnd="@dimen/ten"
            app:cardCornerRadius="@dimen/fifteen"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Image + Play icon overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/girl_story" />

                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_play"
                    android:layout_gravity="center" />

            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Live Badge (floating) -->
        <TextView
            android:id="@+id/txtLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live"
            android:background="@drawable/grey_outline"
            android:backgroundTint="@color/green"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:elevation="5dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="@dimen/ten"
            android:fontFamily="@font/raleway_bold"
            app:layout_constraintStart_toStartOf="@id/cardUserImage"
            app:layout_constraintTop_toTopOf="@id/cardUserImage"
            android:layout_margin="6dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
